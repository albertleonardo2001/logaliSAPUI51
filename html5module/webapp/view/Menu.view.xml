<mvc:View
    controllerName="logaligroup.html5module.controller.Menu"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>menuPrincipal}"
    >
        <content>
            <Panel
                headerText="{i18n>empleados}"
                expandable="true"
                expanded="true"
            >
                <GenericTile
                    headerImage="sap-icon://add-employee"
                    class="sapUiTinyMarginBegin sapUiTinyMarginTop"
                    press="navToCreateEmployee"
                >
                    <TileContent footer="{i18n>crearEmpleado}" />
                </GenericTile>
                <GenericTile
                    headerImage="sap-icon://employee-lookup"
                    class="sapUiTinyMarginBegin sapUiTinyMarginTop"
                    press="navToShowEmployee"
                >
                    <TileContent footer="{i18n>verEmpleados}" />
                </GenericTile>
            </Panel>
            <Panel
                headerText="{i18n>pedidos}"
                expandable="true"
                expanded="true"
            >
                <GenericTile
                    id="linkFirmarPedido"
                    headerImage="sap-icon://signature"
                    class="sapUiTinyMarginBegin sapUiTinyMarginTop"
                    url="https://61c38317trial-dev-logali-approuter.cfapps.us10.hana.ondemand.com/logaligroupEmployees/index.html"
                >
                    <TileContent footer="{i18n>firmarPedido}" />
                </GenericTile>
            </Panel>
        </content>
    </Page>
</mvc:View>
